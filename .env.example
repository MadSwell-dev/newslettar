# Sonarr Configuration
SONARR_URL=http://localhost:8989
SONARR_API_KEY=

# Radarr Configuration
RADARR_URL=http://localhost:7878
RADARR_API_KEY=

# Trakt Configuration (Optional - enables trending series and movies)
# Get your API credentials from https://trakt.tv/oauth/applications
TRAKT_CLIENT_ID=
TRAKT_API_KEY=

# Email Configuration (Works with any SMTP provider: Gmail, Mailgun, SendGrid, etc.)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_NAME=Newslettar
FROM_EMAIL=newsletter@yourdomain.com
TO_EMAILS=user@example.com

# Schedule Settings (Internal Cron - No systemd timer needed!)
TIMEZONE=UTC
SCHEDULE_DAY=Sun
SCHEDULE_TIME=09:00

# Template Settings
SHOW_POSTERS=true
SHOW_DOWNLOADED=true
SHOW_QUALITY_PROFILES=false
SHOW_UNMONITORED=false
SHOW_SERIES_OVERVIEW=false
SHOW_EPISODE_OVERVIEW=false
DARK_MODE=true

# Trakt Features (Requires TRAKT_CLIENT_ID and TRAKT_API_KEY)
SHOW_TRAKT_ANTICIPATED_SERIES=false
SHOW_TRAKT_WATCHED_SERIES=false
SHOW_TRAKT_ANTICIPATED_MOVIES=false
SHOW_TRAKT_WATCHED_MOVIES=false

# Web UI Port
WEBUI_PORT=8080

# Performance Tuning (Optional - defaults are fine for most users)
# API_PAGE_SIZE=1000
# MAX_RETRIES=3
# PREVIEW_RETRIES=2
# API_TIMEOUT=30
